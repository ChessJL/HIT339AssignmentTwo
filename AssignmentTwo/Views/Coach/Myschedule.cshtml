@model IEnumerable<AssignmentTwo.Models.Schedule>

@{
    ViewData["Title"] = "Myschedule";
}

<h2>Myschedule</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.When)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoachEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.When)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CoachEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    <a asp-controller="Coach" asp-action="Showenrolmembers" asp-route-id="@item.Id">Show Enrol Members</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index">Back to Home</a>